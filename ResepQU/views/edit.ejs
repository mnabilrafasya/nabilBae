<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Resep</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-5">
      <h1 class="text-center">Edit Resep</h1>
      <form action="/resep/edit/<%= resep.id %>" method="POST">
        <div class="mb-3">
          <label for="nama" class="form-label">Nama Resep</label>
          <input
            type="text"
            class="form-control"
            id="nama"
            name="nama"
            value="<%= resep.nama %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="id_kategori" class="form-label">Kategori</label>
          <select class="form-control" id="id_kategori" name="id_kategori" required>
            <% kategori.forEach((item) => { %>
            <option value="<%= item.id %>" <%= item.id === resep.id_kategori ? "selected" : "" %>>
              <%= item.nama_kategori %>
            </option>
            <% }); %>
          </select>
        </div>
        <div class="mb-3">
          <label for="bahan" class="form-label">Bahan</label>
          <textarea class="form-control" id="bahan" name="bahan" rows="4" required>
            <%= resep.bahan %>
          </textarea>
        </div>
        <div class="mb-3">
          <label for="deskripsi_makanan" class="form-label">Deskripsi Makanan</label>
          <textarea class="form-control" id="deskripsi_makanan" name="deskripsi_makanan" rows="4" required>
            <%= resep.deskripsi_makanan %>
          </textarea>
        </div>
        <div class="mb-3">
          <label for="gambar" class="form-label">URL Gambar</label>
          <input
            type="text"
            class="form-control"
            id="gambar"
            name="gambar"
            value="<%= resep.gambar %>"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary">Simpan Perubahan</button>
        <a href="/index" class="btn btn-secondary">Batal</a>
      </form>
    </div>
  </body>
</html>
