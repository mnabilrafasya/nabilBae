<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= resep.nama %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="/styleresep.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg custom-navbar navbar-dark shadow fixed-top" style="background-color: #0d6efd">
      <div class="container">
        <a class="navbar-brand" href="/">ResepQu</a>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/daging">Resep Daging</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/sayuran">Resep Sayuran</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/tradisional">Masakan Tradisional</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/ayam">Resep Ayam</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/seafood">Resep Seafood</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/sambal">Resep Sambal</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-5">
      <div class="breadcrumb"><a href="/">Beranda</a> &nbsp;<&nbsp; <a href="/<%= kategori.toLowerCase() %>"><%= kategori %></a> &nbsp;<&nbsp; <span><%= resep[0].nama %></span></div>

      <div class="row mt-4">
        <div class="col-md-6">
          <img src="<%= resep[0].gambar %>" alt="<%= resep[0].nama %>" class="img-fluid rounded shadow" />
        </div>
        <div class="col-md-6">
          <h1 class="recipe-title"><%= resep[0].nama %></h1>
          <p><%= resep[0].deskripsi_makanan %></p>
        </div>
      </div>

      <div class="row mt-5">
        <div class="col-md-4 ingredients">
          <div class="section-title">Bahan</div>
          <ul class="ingredients-list">
            <% resep[0].bahan.forEach((bahan) => { %>
            <li><%= bahan %></li>
            <% }); %>
          </ul>
        </div>
        <div class="col-md-8 instructions">
          <div class="section-title">Cara Membuat</div>
          <ol class="steps-list">
            <% langkah.forEach((item, index) => { %>
            <li><span><%= index + 1 %></span><%= item %></li>
            <% }); %>
          </ol>
        </div>
      </div>

      <div class="container mt-5">
        <h2 class="text-center mb-4">Coba resep lainnya</h2>
        <div class="row">
          <% randomResep.slice(0, 3).forEach((item) => { %>
          <div class="col-md-4">
            <div class="card position-relative">
              <a href="/resep/<%= item.id %>" style="text-decoration: none; color: inherit">
                <img src="<%= item.gambar %>" alt="<%= item.nama %>" class="img-fluid rounded shadow" />
                <div class="card-body">
                  <h5><%= item.nama %></h5>
                </div>
              </a>
            </div>
          </div>
          <% }); %>
        </div>
        <a class="btn-more text-center" href="/">Lebih banyak</a>
      </div>
    </div>
    <footer class="custom-footer text-white text-center py-3">
      <div class="container">
          <p class="mb-0">Â© 2024 ResepQu. All rights reserved.</p>
      </div>
  </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
